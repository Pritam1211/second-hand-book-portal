<style>
	td{
		padding-left: 30px;
		padding-right: 30px;
	}
</style>


{{# if msg}}
  <div class="alert alert-info" role='alert' >
  {{msg}}
  </div>
{{/if}}


<div class="table">
	<table>
		<tr>
			<th>Book Name</th>
			<th>Book Price</th>
			<th>Seller</th>
			<th>Status</th>
			<th>Seller Profile</th>

			<th>Cancle</th>
		</tr>
	
	{{#each request}}
	<tr>
		<td>{{this.book_name}}</td>
		<td>{{this.price}}&nbsp;Rs</td>
		<td>{{this.name}}</td>
		<td>{{this.status}}</td>
		<td>
		{{# if this.link}}
			<a href="profile?id={{this.seller}}" style="text-decoration:none"><i class="fa fa-user" style="font-size:20px;"></i>&nbsp;&nbsp;Get</a>
		{{else}}
			Not Available
		{{/ if}}
		</td>
		
		<td>
			<form method="POST" action="/user/cancle">
				<input type="hidden" name="book" value={{{this.book}}} >
				<input type="hidden" name="id" value={{{this.request_id}}} >
				<button type="submit" class="btn btn-primary">Cancle</button>
			</form>
		</td>
	</tr>
	{{/each}}

	</table>
</div>

